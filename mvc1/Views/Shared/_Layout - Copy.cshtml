                <li><a asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="login.html" class="login">Login/Sign Up</a></li>
            </ul>
        </div>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
